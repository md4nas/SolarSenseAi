<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Base Servo SeekBar -->
        <SeekBar
            android:id="@+id/baseServoSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="180"
            android:progress="90" />

        <!-- Base Servo Angle Display -->
        <TextView
            android:id="@+id/baseServoValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base Servo Angle: 90"
            android:layout_marginTop="8dp" />

        <!-- Panel Servo SeekBar -->
        <SeekBar
            android:id="@+id/panelServoSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="180"
            android:progress="0" />

        <!-- Panel Servo Angle Display -->
        <TextView
            android:id="@+id/panelServoValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel Servo Angle: 0"
            android:layout_marginTop="8dp" />

        <!-- Base Clockwise Button -->
        <Button
            android:id="@+id/btnBaseClockwise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Servo Clockwise" />

        <!-- Base Counterclockwise Button -->
        <Button
            android:id="@+id/btnBaseCounterClockwise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Servo Counterclockwise" />

        <!-- Panel to 0Â° Button -->
        <Button
            android:id="@+id/btnPanelZero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panel Servo to 0" />

        <!-- Panel to Max 180Â° Button -->
        <Button
            android:id="@+id/btnPanelMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panel Servo to Max" />

        <!-- Voice Command Button -->
        <Button
            android:id="@+id/btnVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¤ Voice Command"
            android:layout_marginTop="16dp" />

        <!-- Voice Listening Progress -->
        <ProgressBar
            android:id="@+id/voiceProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Show Commands Button -->
        <Button
            android:id="@+id/btnShowCommands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â“ Voice Commands"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Voice Command List Text -->
        <TextView
            android:id="@+id/txtVoiceCommands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ 'Clockwise'\nâ€¢ 'Counter'\nâ€¢ 'Panel Angle Zero'\nâ€¢ 'Panel Angle Max'\nâ€¢ 'Panel Angle Degree'\nâ€¢ 'Base Angle Degree'"
            android:textSize="16sp"
            android:padding="8dp"
            android:visibility="gone"
            android:background="#22000000"
            android:layout_marginTop="8dp" />

        <!-- Location Input for Weather -->
        <EditText
            android:id="@+id/locationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter location (e.g. Delhi)"
            android:inputType="textCapWords"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="16dp" />

        <!-- Fetch Weather Button -->
        <Button
            android:id="@+id/btnFetchWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Weather"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Weather Result Display -->
        <TextView
            android:id="@+id/weatherDataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather info will appear here"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="#66000000"
            android:gravity="start"
            android:lineSpacingExtra="4dp" />

        <!-- Auto Mode Button -->
        <Button
            android:id="@+id/btnAutoMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Auto Mode"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
