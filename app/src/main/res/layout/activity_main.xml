<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFAFA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Servo Control Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Servo Controls"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginBottom="8dp"/>

        <!-- Base Servo Group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8EAF6"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Base Servo (Rotation)"
                android:textStyle="bold"/>

            <SeekBar
                android:id="@+id/baseServoSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="180"
                android:progress="90"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/baseServoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Base Angle: 90Â°"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnBaseCounterClockwise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â—„ Counter"
                    android:background="#FF5722"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnBaseClockwise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clockwise â–º"
                    android:background="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Panel Servo Group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F5E9"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panel Servo (Tilt)"
                android:textStyle="bold"/>

            <SeekBar
                android:id="@+id/panelServoSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="180"
                android:progress="90"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/panelServoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panel Angle: 90Â°"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnPanelZero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0Â° (Flat)"
                    android:background="#607D8B"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnPanelMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="180Â° (Max)"
                    android:background="#009688"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Voice Control Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voice Control"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¤ Voice Command"
            android:background="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <ProgressBar
            android:id="@+id/voiceProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:indeterminate="true"
            android:visibility="gone"
            android:progressDrawable="@drawable/progress_bar_color"/>

        <Button
            android:id="@+id/btnShowCommands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â“ Show Voice Commands"
            android:layout_gravity="center"
            android:background="#2196F3"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/txtVoiceCommands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ 'Clockwise' - Rotate base right\nâ€¢ 'Counter' - Rotate base left\nâ€¢ 'Panel to X' - Set panel angle\nâ€¢ 'Base to X' - Set base angle\nâ€¢ 'Auto mode on/off' - Toggle tracking"
            android:textSize="14sp"
            android:padding="12dp"
            android:visibility="gone"
            android:background="#E3F2FD"
            android:layout_marginTop="8dp"/>

        <!-- Weather Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/locationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter city name"
            android:inputType="textCapWords"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnFetchWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Weather"
            android:layout_gravity="center"
            android:background="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/weatherDataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather data will appear here"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="#E1F5FE"
            android:gravity="start"
            android:lineSpacingExtra="4dp"/>

        <!-- Auto Mode Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Automatic Sun Tracking"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <ToggleButton
            android:id="@+id/toggleAutoMode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textOn="ðŸŒž AUTO MODE: ON"
            android:textOff="âš™ï¸ AUTO MODE: OFF"
            android:checked="false"
            android:background="@drawable/toggle_background"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <ProgressBar
            android:id="@+id/autoModeProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:visibility="gone"
            android:progressDrawable="@drawable/progress_bar_color"/>

        <!-- Network Configuration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network Configuration"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/espIpInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ESP8266 IP Address (e.g., 192.168.1.100)"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnUpdateIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update IP Address"
            android:layout_gravity="center"
            android:background="#795548"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>